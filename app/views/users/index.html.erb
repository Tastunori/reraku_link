
<h1>ユーザー一覧</h1>
<div class="user_index_container">
  <% @users.each do |user| %>
     <% if @current_user != user %>
    <div class="user_index">
     <div class="user_left">
       <% if user.image.attached? %>
        <img <%= image_tag user.image %></img>
       <% else %>
        <img <%=image_tag "default_img.jpg" %></img>
       <% end %>
     </div>
     <div class="user_right">
       <%= link_to(user.name, "/users/#{user.id}/profile", class:"user_name")  %>
     </div>
   </div>
   <% end %>
  <% end %>
</div>
